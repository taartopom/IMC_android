<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#0C0C0C"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblDuSite"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="#CB353333"
            android:text="Troims" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblPoids"
                android:layout_width="50dp"
                android:layout_height="46dp"
                android:background="#FA1B1B"
                android:text="Poids" />

            <TextView
                android:id="@+id/txtPoids"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#F1EBEB" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblTaille"
                android:layout_width="50dp"
                android:layout_height="47dp"
                android:background="#EEF80707"
                android:text="Taille" />

            <TextView
                android:id="@+id/txtTaille"
                android:layout_width="361dp"
                android:layout_height="match_parent"
                android:background="#FFF9F9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btnMetre"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="#7A090808"
                android:bufferType="normal"
                android:button="@android:drawable/btn_radio"
                android:checked="true"
                android:text="metre"
                android:textColor="#F1F0F0"
                android:textColorHint="#F7F5EDED" />

            <RadioButton
                android:id="@+id/btnCentimetre"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:button="@android:drawable/btn_radio"
                android:checked="false"
                android:drawableBottom="@color/colorAccent"
                android:text="centimetre"
                android:textColor="#F5F2F2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/btnCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@android:drawable/checkbox_on_background"
                android:checked="true"
                android:text="Mega fonction !"
                android:textColor="#EBF1E9E9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCalcul"
                android:layout_width="wrap_content"
                android:layout_height="99dp"
                android:layout_marginEnd="82dp"
                android:layout_marginRight="82dp"
                android:layout_marginBottom="170dp"
                android:text="Calculer IMC" />

            <Button
                android:id="@+id/btnRAZ"
                android:layout_width="wrap_content"
                android:layout_height="101dp"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-2dp"
                android:text="RAZ" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblResult"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Resultat:"
                android:textColor="#F5FA0D0D" />

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_weight="1"
                android:background="#EEF3E9E9" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>